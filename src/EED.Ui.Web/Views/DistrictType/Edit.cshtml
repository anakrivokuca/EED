@model EED.Ui.Web.Models.District_Type.CreateViewModel

@{
    if(Model.Id.Equals(0)) {
        ViewBag.Title = "Add New District Type";
    }
    else {
        ViewBag.Title = "Edit";
    }
}

<hgroup class="title">
    @if (Model.Id.Equals(0)) {
        <h1>@ViewBag.Title</h1>
    }
    else {
        <h1>@ViewBag.Title @Model.Name</h1>
    }
</hgroup>

@using (Html.BeginForm("Edit", "DistrictType")) {
    @Html.ValidationSummary(true);
    <fieldset>
        <legend>District Type</legend>
        
        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Abbreviation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Abbreviation)
            @Html.ValidationMessageFor(model => model.Abbreviation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParentDistrictTypeId)
        </div>
        <div class="editor-field">
                @Html.DropDownListFor(model => model.ParentDistrictTypeId, Model.DistrictTypes, string.Empty)
                @Html.ValidationMessageFor(model => model.ParentDistrictTypeId)
        </div>
        
        <p>
            <input type="submit" value="Save" />
            @Html.ActionLink("Cancel and Return to District Type List", "List")
        </p>
    </fieldset> 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
