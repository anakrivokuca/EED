<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - EED Application</title>
        <link href="~/favicon.jpg" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Site.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <img src="~/Images/logo.jpg" alt="Home" />
                        <!--Html.ActionLink("Logo", "Index", "Home")-->
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        @Html.Partial("_MenuPartial")
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <div id="menuList">@Html.Partial("_LeftSideMenuPartial")</div>
            <section class="content-wrapper main-content clear-fix">
                @if (TempData["message-success"] != null) {
                    <div class="message-success">@TempData["message-success"]</div>
                }
                @if (TempData["message-info"] != null) {
                    <div class="message-info">@TempData["message-info"]</div>
                }
                @if (TempData["message-error"] != null) {
                    <div class="message-error">@TempData["message-error"]</div>
                }
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - EED Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
